@{
    ViewBag.Title = "Форма заявки на прочтение книги";
    Layout = "~/Views/Shared/_Layout.cshtml"; ;
}

<div>
    <div id="message"><p>@ViewBag.Message</p></div>
    <h3>Форма оформления покупки</h3>
    <form method="post" action="">
        <input type="hidden" value="@ViewBag.BookId" name="Id_book" />
        <input type="hidden" value="@ViewBag.Type" name="Type" />
        <table>
            <tr>
                <td><p>Введите свое имя </p></td>
                <td>
                    <select name="selection">
                        @foreach (var employee in ViewBag.Employees)
                        {
                            <option>@employee.FIO</option>
                        }
                    </select>
                </td>
            </tr>
            <tr><td><input type="submit" value="Отправить" /> </td><td></td></tr>
        </table>
    </form>
</div>